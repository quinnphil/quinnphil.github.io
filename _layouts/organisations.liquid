---
layout: page
---
<div class="post">
  <article>
  <hr>
    {% if page.organisations %}
      {% for organisation in page.organisations %}
        {% assign organisation_logo_path = organisation.logo | prepend: '/assets/img/' %}
          <div>
          <img src="{{ organisation_logo_path }}"  alt="{{organisation.name}} logo" />
          {{ organisation.name }}
          {{ organisation.url }}
          {{ organisation.description }}
      </div>
      {% endfor %}

        <div class="clearfix">
          {% if organisation.content %}
            {% capture organisation_content %}{% include_relative {{ organisation.content }} %}{% endcapture %}
            {{ organisation_content | markdownify }}
          {% else %}
            {{ content }}
          {% endif %}
        </div>
    {% endif %}
  </article>
</div>
